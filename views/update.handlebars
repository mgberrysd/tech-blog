{{!-- Handlebars to update an individual post --}}
{{!-- Form input is the same as creating a new post but on own page --}}

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update a Post:</h3>

    <form class="form new-post-form" data-id="{{id}}">
      <div class="form-group">
        <label for="post-title">Post title:</label>
        <textarea class="form-input" type="text" id="post-title" name="post-title">{{title}}</textarea>
      </div>
      <div class="form-group">
        <label for="post-desc">Content:</label>
        <textarea class="form-input" id="post-desc" name="post-desc">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="click" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>

  <script src="/js/update.js"></script>