<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Leave a Comment:</h3>

      <form class="form new-comment-form">
        <div class="form-group">
          <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary"  data-id="{{id}}">Comment</button>
        </div>
      </form>
    </div>

    {{#if comments.length}}
    <div class="col-md-6 post-list">
      {{#each comments}}
      <div class="row mb-2">
        <div class="col-md-8">
          <p>Created by {{user.name}} on {{format_date date_created}}</p>
        </div>
        <div class="col-md-8">
          <p>{{content}}</p>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>

<script src="./js/post.js"></script>
