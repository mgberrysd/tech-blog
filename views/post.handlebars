<div class="row mb-4 card card-rounded center">
  <div class="col-md-12 card-header text-center">
    <h3>{{title}}</h3>
  </div>
  <div class="col-md-12 card-body">
    <p class="text-right">Posted by {{user.name}} on {{format_date date_created}}</p>
    <p>{{content}}</p>
  </div>

  </div>

  <div class="row mt-4 center">
    {{#if comments.length}}
    <div class="col-md-8 post-list">
      {{#each comments}}
      <div class="row mb-2 card card-rounded center">
        <div class="col-md-12 card-header text-right">
          <p>Posted by {{user.name}} on {{format_date date_created}}</p>
        </div>
        <div class="col-md-12 comment">
          <p>{{content}}</p>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}

    {{#if logged_in}}

    <div class="col-md-12">
      <h4>Leave a Comment:</h4>
      <form class="form new-comment-form" data-id="{{id}}">
        <div class="form-group">
          <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Comment</button>
        </div>
      </form>
    </div>
    {{/if}}

  </div>
</div>

<script src="/js/comment.js"></script>