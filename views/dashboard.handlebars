{{!-- Handlebars page for the dashboard --}}

<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

{{!-- Form for creating new posts --}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Post title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-desc">Content:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="click" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

{{!-- If the user has posts the following will display --}}
  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>My Posts:</h3>
{{!-- For each post a link to that post is created as well as update and delete buttons --}}
{{!-- Update links to a seperate page since post content is not displayed here --}}
{{!-- Delete button simply makes a delete request then reloads the page --}}
    {{#each posts}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{id}}">{{title}}</a></h4>
      </div>
      <div class="col-md-4">
        <a href="/update/{{id}}" class="btn btn-sm">UPDATE</a>
        <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
